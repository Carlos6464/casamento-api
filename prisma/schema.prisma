generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Presente {
  id         Int      @id @default(autoincrement())
  nome       String
  link       String
  preco      Decimal  @db.Decimal(10, 2) // 10 d√≠gitos no total, 2 casas decimais
  nome_user  String?
  email_user String?
  status     Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt
}

model Recado {
  id        Int      @id @default(autoincrement())
  nome      String
  email     String
  recado    String   @db.VarChar(200) // Define um limite de 255 caracteres
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}
